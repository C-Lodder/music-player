{
  "name": "music-player",
  "version": "1.0.5",
  "description": "Just another music player",
  "author": "Charlie Lodder",
  "license": "MIT",
  "repository": "https://github.com/C-Lodder/music-player",
  "main": "app/js/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postcss": "postcss app/css/app.css -o dist/css/app.css",
    "rollup": "rollup --config rollup.config.js"
  },
  "dependencies": {
    "electron-store": "^7.0.3",
    "plist": "^3.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "autoprefixer": "^10.2.5",
    "cssnano": "^5.0.0",
    "electron": "^11.3.0",
    "electron-builder": "^22.10.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "postcss-discard-comments": "^5.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-nested": "^5.0.5",
    "rollup": "^2.45.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "build": {
    "appId": "music-player",
    "productName": "Music Player",
    "directories": {
      "output": "package"
    },
    "files": [
      "**/*",
      "!package-lock.json",
      "!README.md",
      "!CHANGELOG.md",
      "!.gitignore",
      "!postcss.config.js",
      "!rollup.config.js",
      "!LICENSE"
    ]
  }
}
