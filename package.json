{
  "name": "music-player",
  "version": "1.0.4",
  "description": "Just another music player",
  "author": "Charlie Lodder",
  "license": "MIT",
  "repository": "https://github.com/C-Lodder/music-player",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postcss": "postcss src/css/app.css -o dist/css/app.css"
  },
  "dependencies": {
    "electron-store": "^6.0.0",
    "path": "^0.12.7",
    "plist": "^3.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.2",
    "postcss-discard-comments": "^4.0.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-nested": "^4.2.3"
  },
  "build": {
    "appId": "music-player",
    "productName": "Music Player",
    "directories": {
      "output": "package"
    },
    "files": [
      "**/*",
      "!package-lock.json",
      "!README.md",
      "!CHANGELOG.md",
      "!.gitignore",
      "!postcss.config.js",
      "!LICENSE"
    ]
  }
}
